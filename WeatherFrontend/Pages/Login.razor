@page "/login"
@layout LoginLayout
@using MudBlazor
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<style>
    /* Make the background fill the entire viewport */
    .weather-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(135deg, #36d1dc 0%, #5b86e5 100%);
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 0 20px;
        box-sizing: border-box;
    }

    .login-container {
        width: 100%;
        max-width: 450px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .login-card {
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
    }

    .header-section {
        background: #6b64e2;
        color: white;
        padding: 24px;
        text-align: center;
    }

    .form-section {
        background: white;
        padding: 24px;
    }

    .tabs-container {
        display: flex;
        margin-bottom: 24px;
    }

    .tab {
        flex: 1;
        text-align: center;
        padding: 12px;
        cursor: pointer;
        border-bottom: 2px solid transparent;
    }

        .tab.active {
            border-bottom: 2px solid #6b64e2;
            color: #6b64e2;
            font-weight: 500;
        }

    .login-button {
        background-color: #6b64e2 !important;
        color: white !important;
        border-radius: 24px !important;
        padding: 12px !important;
        height: 48px;
    }

    /* Make the cloud elements more subtle */
    .cloud {
        position: absolute;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
    }

    .cloud-1 {
        width: 150px;
        height: 60px;
        top: 10%;
        left: 10%;
    }

    .cloud-2 {
        width: 100px;
        height: 40px;
        top: 20%;
        right: 15%;
    }

    .cloud-3 {
        width: 180px;
        height: 70px;
        bottom: 15%;
        left: 5%;
    }

    .cloud-4 {
        width: 120px;
        height: 50px;
        bottom: 25%;
        right: 10%;
    }
</style>

<div class="weather-background">
    <div class="cloud cloud-1"></div>
    <div class="cloud cloud-2"></div>
    <div class="cloud cloud-3"></div>
    <div class="cloud cloud-4"></div>

    <div class="login-wrapper">
        <div class="login-container">
            <MudCard Class="login-card">
                <div class="header-section">
                    <MudIcon Icon="@Icons.Material.Filled.Cloud" Size="Size.Medium" Class="mb-2" />
                    <MudText Typo="Typo.h5">Find the Weather</MudText>
                    <MudText Typo="Typo.caption">Your daily weather companion</MudText>
                </div>

                <div class="form-section">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Sign In</MudText>

                    <div class="tabs-container">
                        <div class="tab active">
                            <MudText>SIGN IN</MudText>
                        </div>
                        <div class="tab" @onclick="@(() => Navigation.NavigateTo("/register"))">
                            <MudText>SIGN UP</MudText>
                        </div>
                    </div>

                    <MudTextField @bind-Value="email"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  Class="mb-4"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Email" />

                    <MudTextField @bind-Value="password"
                                  Label="Password"
                                  Variant="Variant.Outlined"
                                  Class="mb-2"
                                  InputType="InputType.Password"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Lock" />

                    <div class="d-flex justify-end mb-4">
                        <MudLink Href="/forgot-password" Underline="Underline.Hover">Forgot Password?</MudLink>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <MudAlert Severity="Severity.Error" Class="my-3" Variant="Variant.Filled">@errorMessage</MudAlert>
                    }

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               FullWidth="true"
                               OnClick="HandleLogin"
                               DisableElevation="true"
                               Class="login-button mt-4 mb-4">
                        SIGN IN
                    </MudButton>

                    <MudText Typo="Typo.body2" Align="Align.Center">
                        Don't have an account? <MudLink Href="/register" Underline="Underline.Hover">Sign Up</MudLink>
                    </MudText>
                </div>
            </MudCard>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        try
        {
            var result = await AuthService.Login(email, password);
            if (result != null)
            {
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                errorMessage = "Invalid credentials";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login: " + ex.Message;
        }
    }
}